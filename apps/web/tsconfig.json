{
  "extends": "@awardrobe/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@ui/*": ["src/components/ui/*"],
      "@icons/*": ["src/components/icons/*"],
      "@/*": ["./src/*"]
    },
    "incremental": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
